generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String            @id @default(cuid())
  email      String            @unique
  password   String
  name       String?
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
  projects   ProjectMember[]
  activities ProjectActivity[]
  searches   ProjectSearch[]

  @@map("users")
}

model Project {
  id         String            @id @default(cuid())
  name       String
  userId     String
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
  members    ProjectMember[]
  activities ProjectActivity[]
  buildLogs  BuildLog[]
  searches   ProjectSearch[]

  @@map("projects")
}

model ProjectSearch {
  id        String   @id @default(cuid())
  projectId String
  query     String
  results   Json     // Stores search results metadata
  userId    String
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@map("project_searches")
}

model ProjectMember {
  id        String           @id @default(cuid())
  projectId String
  userId    String
  role      MemberRole       @default(VIEWER) // VIEWER, EDITOR, ADMIN
  invitedBy String
  invitedAt DateTime         @default(now())
  joinedAt  DateTime?
  status    InvitationStatus @default(PENDING)

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@map("project_members")
}

model ProjectActivity {
  id         String   @id @default(cuid())
  projectId  String
  userId     String
  action     String   // "created", "modified", "built", "deployed"
  targetType String   // "file", "project", "deployment"
  targetId   String?
  details    Json?
  createdAt  DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("project_activities")
}

model BuildLog {
  id          String      @id @default(cuid())
  projectId   String
  status      BuildStatus @default(PENDING)
  logs        String?
  progress    Int         @default(0) // 0-100 percentage
  startedAt   DateTime    @default(now())
  completedAt DateTime?

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("build_logs")
}

enum MemberRole {
  VIEWER
  EDITOR
  ADMIN
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
}

enum BuildStatus {
  PENDING
  BUILDING
  SUCCESS
  FAILED
  CANCELLED
}